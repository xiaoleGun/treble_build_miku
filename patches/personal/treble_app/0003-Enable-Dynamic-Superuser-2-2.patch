diff --git a/app/src/main/java/me/phh/treble/app/Misc.kt b/app/src/main/java/me/phh/treble/app/Misc.kt
index bcbbc6e..85022ab 100644
--- a/app/src/main/java/me/phh/treble/app/Misc.kt
